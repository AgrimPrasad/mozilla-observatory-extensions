{
  "manifest_version": 2,
  "name": "mozilla-http-observatory",
  "description": "Analyze website security using the Mozilla HTTP Observatory API ",
  "version": "0.0.1",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "bundle.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Mozilla HTTP Observatory",
    "default_popup": "popup.html"
  }
}
